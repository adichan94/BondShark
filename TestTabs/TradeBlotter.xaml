<UserControl x:Class="TestTabs.TradeBlotter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestTabs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="0,0,-1052,-384" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" Width="Auto">
        <Grid.Background>
            <ImageBrush ImageSource="TradeBlotterBackground.jpg"/>
        </Grid.Background>
        <Image Source="logo.png" Margin="1250,-6,2,590"/>
        <DataGrid x:Name="TradesDataGrid" IsReadOnly="True" HorizontalAlignment="Stretch" Height="485" Margin="0,124,0,0" VerticalAlignment="Top" Width="Auto" BorderBrush="{x:Null}" Foreground="Black" >
            <DataGrid.Background>
                <SolidColorBrush Color="#FFF0F0F0" Opacity="0"/>
            </DataGrid.Background>
        </DataGrid>
        <Label x:Name="TradeBlotterHeading" Content="Trade History" HorizontalAlignment="Left" Height="84" Margin="10,26,0,0" VerticalAlignment="Top" Width="318" Foreground="#FFDBF094" FontSize="48" FontFamily="Source Sans Pro Black"/>
    </Grid>
</UserControl>
